{% import "_imports/_utils" as utils %}

<section class="feature annotation full {{animateByScroll}}">
	<article>
		{% include "_includes/_border-heading" with {'tag': 'h4', 'bottom': true, 'text': feature.heading} %}
		<div>{{ feature.body }}</div>
	</article>

	<figure>
		{% set image = feature.image[0] %}
	    <div class="image" 
	    style="width:{{ utils.getActualImageWidth(image) }}px"
	    {%- if feature.canEnlarge %}data-can-enlarge="true"{% endif %}
	    {%- if feature.canEnlarge %}data-enlarged-src="{{ image.url }}"{% endif %}>

        	<div class="aspect-container"
        	style="padding-bottom:{{ image.height/image.width*100 }}%">
		    	<div class="movable">
		    		<div class="annotation-container" style="width:{{ utils.getActualImageWidth(image) }}px">
		    			<img src="{{ image.url }}">
		    		</div>

		    		{%- if feature.canEnlarge %}
		    		<div class="hover-box"></div>
		    		{% endif %}
		    	</div>
	    	</div>

	    </div>
	</figure>
</section>